{
  "name": "segmented-property",
  "version": "2.0.3",
  "repository": "git@github.com:mariuslundgard/segmented-property.git",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "typings": "dist/module/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all tsc-*",
    "clean": "rimraf dist",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "format": "prettier --write \"{src,perf/src,test}/**/*.{js,ts,tsx}\"",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prebuild": "npm run clean",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "test": "jest --coverage",
    "tsc-commonjs": "tsc -p .tsconfig/commonjs.json",
    "tsc-module": "tsc -p .tsconfig/module.json"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": "(\\.|/)(test|spec)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": true
  }
}
